<!DOCTYPE html>
<html lang="en">
  <head>
    <% include partials/head %>
  </head>
  <body>
    <% include partials/loader %>
    <header>
      <% include partials/header %>
    </header>
    <div class="tt-breadcrumb">
      <div class="container">
        <ul>
          <li><a href="/">Trang chủ</a></li>
          <li>Tài khoản</li>
        </ul>
      </div>
    </div>
    <div id="tt-pageContent">
      <div class="container-indent">
        <div class="container container-fluid-custom-mobile-padding">
          <h1 class="tt-title-subpages noborder">TÀI KHOẢN</h1>
          <div class="tt-shopping-layout">
            <div class="tt-wrapper">
              <h6 class="tt-title">Chỉnh sửa thông tin các nhân</h6>
              <div class="form-default">
                <form method="POST">
                  <div class="form-group">
                    
                      <label for="ProductImage">Hình ảnh</label>
                      <input type="text" class="form-control" name="AvatarLink" id="nameImage" multiple/>
                      <div class="image-preview" id="imagePreview" style="height: 150px; width: 200px; border: black 1px; border-radius: 25%; border-color: black">
                        <% if (user.Avatar != undefined) { %>
                          <img src="<%= user.Avatar %>" alt="Image Preview" class="image-preview__image" style="height: 150px; width: 200px;"/>
                        <% } %>
                          <% if (user.Avatar == undefined) { %>
                            <span class="image-preview__default-text">Image Preview</span>
                          <% } %>

                      </div>  
                    
                    <label for="shopInputFirstName" class="control-label"
                      >Họ *</label
                    >
                    <input
                      type="text"
                      class="form-control"
                      id="shopInputFirstName"
                      name="lastName"
                      value="<%= user.lastName %>"
                    />
                  </div>
                  <div class="form-group">
                    <label for="shopInputLastName" class="control-label"
                      >Tên *</label
                    >
                    <input
                      type="text"
                      class="form-control"
                      id="shopInputLastName"
                      name="firstName"
                      value="<%= user.firstName %>"
                    />
                  </div>
                  <div class="form-group">
                    <label for="shopAddress" class="control-label"y
                      >Địa chỉ *</label
                    >
                    <input
                      type="text"
                      class="form-control"
                      id="shopAddress"
                      name="address"
                      value="<%= user.address %>"
                    />
                  </div>
                  <div class="form-group">
                    <label for="shopPhone" class="control-label"
                      >Số Điện Thoại*</label
                    >
                    <input
                      type="text"
                      class="form-control"
                      id="shopPhone"
                      name="phoneNumber"
                      value="<%= user.phoneNumber %>"
                    />
                  </div>
                  <div class="form-group">
                    <label for="shopEmail" class="control-label"
                      >Địa chỉ email *</label
                    >
                    <input
                      type="text"
                      class="form-control"
                      id="shopEmail"
                      name="email"
                      value="<%= user.email %>"
                    />
                  </div>
                  <!-- <div class="checkbox-group">
                    <input type="checkbox" id="checkBox11" name="checkbox" />
                    <label for="checkBox11">
                      <span class="check"></span>
                      <span class="box"></span>
                      Set as deafult address?
                    </label>
                  </div> -->
                  <div class="row tt-offset-21">
                    <div class="col-auto">
                      <button type="submit" class="btn">Lưu</button>
                    </div>
                    <div class="col-auto align-self-center">
                      or <a href="/account" class="tt-link">Huỷ</a>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <footer>
      <% include partials/footer %>
    </footer>
    <a href="#" class="tt-back-to-top">BACK TO TOP</a>
    <!-- Partials -->
    <% include partials/modal-addtocartproduct %> <% include
    partials/modal-quickviewmodal %> <% include partials/modal-videoproduct %>
    <% include partials/modal-subscribegood %> <% include
    partials/modal-newsletter %> <% include partials/script %>
  </body>
  <script>
    const inputFile = document.getElementById("nameImage");
    const previewContainer = document.getElementById("imagePreview");
    const previewImage = document.querySelector(".image-preview__image");
    const previewDefaultText = document.querySelector(".image-preview__default-text");

    inputFile.addEventListener("change", function () {
      const file = this.files[0];
      if (file) {
        const reader = new FileReader();
        previewImage.style.display = "block";
        previewDefaultText.style.display = "none";
        reader.addEventListener("load", function(){
          console.log(this);
          previewImage.setAttribute("src", this.result);
        });

        reader.readAsDataURL(file);
      }
    });
    function selectType() {
      const category = document.getElementById("category").value;
      const PhuKien = document.getElementById("ProductSubTypePhuKien");
      const Ao = document.getElementById("ProductSubTypeAo");
      const Quan = document.getElementById("ProductSubTypeQuan");

      if (category == "Phụ Kiện"){
        PhuKien.style.display = "block";
        Ao.style.display = "none";
        Quan.style.display = "none";
      }
      else if (category == "Áo"){
        PhuKien.style.display = "none";
        Ao.style.display = "block";
        Quan.style.display = "none";
      }
      else if (category == "Quần"){
        PhuKien.style.display = "none";
        Ao.style.display = "none";
        Quan.style.display = "block";
      }
    }
  </script>
</html>
